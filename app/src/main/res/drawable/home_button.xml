<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/colorGreen"
                android:endColor="@color/colorGreen"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorGreen" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/colorLogoBlue"
                android:startColor="@color/colorLogoBlue"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorLogoBlue" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/colorWhite"
                android:startColor="@color/colorWhite"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/colorGreen" />
            <corners
                android:color = "@color/colorWhite"
                android:radius="0dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>